<model>
    <mount>//OPNsense/ProxyUserACL</mount>
    <version>1.0.1</version>
    <description>
        Group and User ACL settings
    </description>
    <items>
        <general>
            <Users>
                <User type="ArrayField">
                    <Names type="CSVListField">
                        <Required>Y</Required>
                    </Names>
                    <Hex type="CSVListField">
                        <Required>Y</Required>
                    </Hex>
                    <Group type="OptionField">
                        <Required>Y</Required>
                        <default>group</default>
                        <OptionValues>
                            <group>Group</group>
                            <user>User</user>
                        </OptionValues>
                    </Group>
                    <Server type="AuthenticationServerField">
                        <Required>Y</Required>
                        <multiple>N</multiple>
                    </Server>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </User>
            </Users>
            <Domains>
                <Domain type="ArrayField">
                    <Names type="CSVListField">
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                    <Regexp type="BooleanField">
                        <default>0</default>
                        <Required>Y</Required>
                    </Regexp>
                </Domain>
            </Domains>
            <Agents>
                <Agent type="ArrayField">
                    <Names type="CSVListField">
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </Agent>
            </Agents>
            <Times>
                <Time type="ArrayField">
                    <Days type="OptionField">
                        <Required>N</Required>
                        <Multiple>Y</Multiple>
                        <OptionValues>
                            <S>Sunday</S>
                            <M>Monday</M>
                            <T>Tuesday</T>
                            <W>Wednesday</W>
                            <H>Thursday</H>
                            <F>Friday</F>
                            <A>Saturday</A>
                        </OptionValues>
                    </Days>
                    <Start type="TextField">
                        <default>00:00</default>
                        <Required>Y</Required>
                    </Start>
                    <End type="TextField">
                        <default>00:00</default>
                        <Required>Y</Required>
                    </End>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </Time>
            </Times>
            <Mimes>
                <Mime type="ArrayField">
                    <Names type="CSVListField">
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </Mime>
            </Mimes>
            <Srcs>
                <Src type="ArrayField">
                    <Names type="CSVListField">
                        <mask>/^([\/0-9a-fA-F.:,])*/u</mask>
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </Src>
            </Srcs>
            <Dsts>
                <Dst type="ArrayField">
                    <Names type="CSVListField">
                        <mask>/^([\/0-9a-fA-F.:,])*/u</mask>
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </Dst>
            </Dsts>
            <MACs>
                <MAC type="ArrayField">
                    <Names type="CSVListField">
                        <mask>/^([\/0-9a-fA-F:,\-])*/u</mask>
                        <Required>Y</Required>
                    </Names>
                    <id type="AutoNumberField">
                        <Required>Y</Required>
                    </id>
                    <Description type="TextField">
                        <Required>Y</Required>
                    </Description>
                </MAC>
            </MACs>
            <HTTPAccesses>
                <HTTPAccess type="ArrayField">
                    <Users type="CSVListField">
                    </Users>
                    <Domains type="ModelRelationField">
                        <Model>
                            <Domains>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Domains.Domain</items>
                                <display>Description</display>
                            </Domains>
                        </Model>
                        <ValidationMessage>Related domain not found</ValidationMessage>
                        <Required>N</Required>
                    </Domains>
                    <Agents type="ModelRelationField">
                        <Model>
                            <Agents>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Agents.Agent</items>
                                <display>Description</display>
                            </Agents>
                        </Model>
                        <ValidationMessage>Related agent not found</ValidationMessage>
                        <Required>N</Required>
                    </Agents>
                    <Times type="ModelRelationField">
                        <Model>
                            <Times>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Times.Time</items>
                                <display>Description</display>
                            </Times>
                        </Model>
                        <ValidationMessage>Related time not found</ValidationMessage>
                        <Required>N</Required>
                    </Times>
                    <Mimes type="ModelRelationField">
                        <Model>
                            <Mimes>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Mimes.Mime</items>
                                <display>Description</display>
                            </Mimes>
                        </Model>
                        <ValidationMessage>Related mime not found</ValidationMessage>
                        <Required>N</Required>
                    </Mimes>
                    <Srcs type="ModelRelationField">
                        <Model>
                            <Srcs>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Srcs.Src</items>
                                <display>Description</display>
                            </Srcs>
                        </Model>
                        <ValidationMessage>Related src not found</ValidationMessage>
                        <Required>N</Required>
                    </Srcs>
                    <Dsts type="ModelRelationField">
                        <Model>
                            <Dsts>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.Dsts.Dst</items>
                                <display>Description</display>
                            </Dsts>
                        </Model>
                        <ValidationMessage>Related dst not found</ValidationMessage>
                        <Required>N</Required>
                    </Dsts>
                    <MACs type="ModelRelationField">
                        <Model>
                            <MACs>
                                <source>OPNsense.ProxyUserACL.ProxyUserACL</source>
                                <items>general.MACs.MAC</items>
                                <display>Description</display>
                            </MACs>
                        </Model>
                        <ValidationMessage>Related MAC not found</ValidationMessage>
                        <Required>N</Required>
                    </MACs>
                    <Black type="OptionField">
                        <Required>Y</Required>
                        <default>deny</default>
                        <OptionValues>
                            <deny>Black</deny>
                            <allow>White</allow>
                        </OptionValues>
                    </Black>
                    <Priority type="IntegerField">
                        <default>0</default>
                        <Required>Y</Required>
                    </Priority>
                </HTTPAccess>
            </HTTPAccesses>
        </general>
    </items>
</model>
